<?xml version="1.0" encoding="utf-8"?>

<jnlp spec="1.0+" codebase="http://www.aavso.org/data/software/vstar" href="vstar.jnlp">

  <information>

    <title>VStar</title>
    <vendor>American Association of Variable Star Observers</vendor>
    <homepage href="http://www.citizensky.org/teams/vstar-software-development"/>
    <description>
      VStar is a multi-platform, easy-to-use variable star data visualization tool. 
      Data can be read from a file or the AAVSO database and plotted as a light curve 
      and phase plot along with mean data and error bars. Period analysis is in development.
    </description>
    <description kind="short">VStar</description>
    <description kind="one-line">VStar: a variable star data visualization tool.</description>
    <description kind="tooltip">VStar</description>

<!-- Add hooks for inclusion of icon and splash page artwork for when they are ready.
