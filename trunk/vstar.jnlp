    <icon href="images/vstar_icon.gif"/>
    <icon kind="splash" href="images/vstar_splash_page.jpg"/>

-->

    <offline-allowed />
    
  </information>

  <security>
    <all-permissions/>
  </security>

  <resources>

    <j2se version="1.5+" java-vm-args="-Xms100m -Xmx800m"/> 

        <jar href="dist/vstar.jar"/>
        <jar href="extlib/jcommon-1.0.16.jar"/>
        <jar href="extlib/jfreechart-1.0.13.jar"/>
        <jar href="extlib/swing-worker-1.2.jar"/>
        <jar href="extlib/jlfgr-1_0.jar"/>
        <jar href="extlib/mysql-connector-java-5.1.10-bin.jar"/>

  </resources>

  <application-desc main-class="org.aavso.tools.vstar.ui.VStar" />
  </application-desc>

</jnlp>
